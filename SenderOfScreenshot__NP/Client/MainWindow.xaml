<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition  />
        </Grid.RowDefinitions>

        <Image x:Name="image_Screenshot" Margin="10"/>
        <Button Content="Get Screenshot" Height="Auto" Width="150" Margin="0 10 40 10" HorizontalAlignment="Right" Grid.Row="1" Click="Button_Click" />
    </Grid>
</Window>
